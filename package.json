{
  "name": "timetracker",
  "version": "0.0.0",
  "private": "true",
  "description": "",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix src",
    "lint:prettier": "prettier --write src --loglevel warn",
    "serve": "vite preview",
    "start": "vite",
    "tauri": "tauri"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "@tauri-apps/cli": "^1.2.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "^18.11.16",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-filename-export": "^0.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vite-plugin-solid": "^2.5.0",
    "vite-plugin-static-copy": "^0.13.0",
    "vite-tsconfig-paths": "^4.0.3"
  },
  "dependencies": {
    "@solid-primitives/raf": "^2.1.4",
    "@solidjs/router": "^0.5.1",
    "@tauri-apps/api": "^1.2.0",
    "solid-heroicons": "^3.1.1",
    "solid-js": "^1.6.5",
    "solid-markdown": "^1.2.0"
  },
  "lint-staged": {
    "!(/)**/*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "/*.config.js": [
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css,scss,less,graphql,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "tailwindConfig": "tailwind.config.cjs",
    "plugins": [
      "prettier-plugin-tailwindcss",
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "solid-?js",
      "@tauri(.*)$",
      "@/pages(.*)$",
      "@/layout(.*)$",
      "@/organisms(.*)$",
      "@/molecules(.*)$",
      "@/atoms(.*)$",
      "@/hooks(.*)$",
      "@/utils(.*)$",
      "@/assets(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
