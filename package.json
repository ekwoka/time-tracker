{
  "name": "timetracker",
  "version": "0.0.0",
  "private": "true",
  "description": "",
  "scripts": {
    "build": "tauri build",
    "dev": "tauri dev",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint --fix src",
    "lint:prettier": "prettier --write src --loglevel warn",
    "lint:check": "eslint --max-warnings 10 ./src && prettier --check ./src",
    "serve": "vite preview",
    "vite": "vite",
    "tauri": "tauri"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/line-clamp": "0.4.4",
    "@tailwindcss/typography": "0.5.9",
    "@tauri-apps/cli": "1.3.1",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "18.16.16",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "autoprefixer": "10.4.14",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-filename-export": "1.0.4",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.3.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vite-plugin-solid": "2.7.0",
    "vite-plugin-static-copy": "0.16.0",
    "vite-tsconfig-paths": "4.2.0"
  },
  "dependencies": {
    "@formkit/auto-animate": "1.0.0-beta.6",
    "@solid-primitives/raf": "2.1.12",
    "@solidjs/router": "0.8.2",
    "@tauri-apps/api": "1.3.0",
    "daisyui": "3.0.22",
    "solid-auto-animate": "0.2.0",
    "solid-heroicons": "3.2.3",
    "solid-js": "1.7.6",
    "solid-markdown": "1.2.2"
  },
  "lint-staged": {
    "!(/)**/*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "/*.config.js": [
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css,scss,less,graphql,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "tailwindConfig": "tailwind.config.cjs",
    "plugins": [
      "prettier-plugin-tailwindcss",
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "solid-?js",
      "@tauri(.*)$",
      "@/pages(.*)$",
      "@/layout(.*)$",
      "@/organisms(.*)$",
      "@/molecules(.*)$",
      "@/atoms(.*)$",
      "@/hooks(.*)$",
      "@/stores(.*)$",
      "@/utils(.*)$",
      "@/assets(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "pnpm": {
    "overrides": {
      "json5@>=2.0.0 <2.2.2": ">=2.2.2"
    }
  }
}
